#include <iostream>
#include <vector>
template<typename T>
class CircularBuffer
{
public:
    CircularBuffer( int size)
    {
        head = tail = 0;
        arr.reserve(size);

    }
    // Добавить элемент
    ~CircularBuffer(){
        arr.clear();
    }
    void put( const int & value )
    {
        if ( tail == arr.size() )
        {
            tail = 0;
        }

        arr.push_back(value);
        ++tail;
    }
    // Извлечь последний элемент
    int & pop()
    {
        if ( head == arr.size()) {
            head = 0;
        }
        int & elem = arr[head];
        arr.erase(arr.begin());
        arr.resize(arr.size()-1);
        ++head;
        return elem;

    }
    // Кол-во элементов в буфере
    size_t size() const
    {
        
    }

    // Ёмкость буфера
    size_t capacity() const
    {
        return arr.size();
    }
    int operatorr(const int  i )
    {
        return arr[i];
    }
    void PrintBuffer(){
        std::cout<<head<<" "<<tail<<" ";
        for(int i=head; i<=tail;++i)
            std::cout<<arr[i]<<" ";
        std::cout<<std::endl;
    }
private:
    std::vector<T> arr;             // массив-буфер
    int head;              // индекс первого элемента
    int tail;              // индекс последнего элемента
};
int main()
{
    CircularBuffer <int>buf(3);
    for( int i = 0; i < 10; ++i )
    {
        buf.put( i * 2 );
        std::cout<<buf.capacity()<<' '<<buf.size()<<std::endl;
        if ( buf.size() == buf.capacity() ) {
            std::cout << "---------------" << std::endl;
            while( buf.size() ) {
                buf.PrintBuffer();
                std::cout<<buf.size()<<std::endl;
                std::cout << buf.pop() << std::endl;

            }
        }

    }
    std::cout << "---------------" << std::endl;
    while( buf.size() ) {
        std::cout << buf.pop() << std::endl;
    }
    return 0;
}
